<!-- Enlace al CSS de Swiper -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css"/>

<!-- Enlace al JS de Swiper -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js"></script>


{%- liquid
 assign img_predeterminado="https://res.cloudinary.com/darps1cta/image/upload/v1681937216/sitioweb/5_razones_por_las_que_tu_negocio_necesita_una_tienda_virtual_en_Shopify_elugcl.jpg"

 -%}
 
 <section class="swiper-container diapositiva-nueva-desktop">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        {% if block.settings.image_desktop %}
          <div class="swiper-slide">
            {% if block.settings.link_de_diapositiva %}
              <a href="{{ block.settings.link_de_diapositiva }}">
                <img src="{{ block.settings.image_desktop | img_url: '1536x600' }}" alt="" class="desktop-image">
              </a>
            {% else %}
              <img src="{{ block.settings.image_desktop | img_url: '1536x600' }}" alt="" class="desktop-image">
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <!-- Agregar aquí paginación, navegación, etc., si se necesita -->
  </section>
  
  <!-- Sección de Diapositivas para Móvil -->
  <section class="swiper-container diapositiva-nueva-mobil">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        {% if block.settings.image_mobile %}
          <div class="swiper-slide">
            {% if block.settings.link_de_diapositiva %}
              <a href="{{ block.settings.link_de_diapositiva }}">
                <img src="{{ block.settings.image_mobile | img_url: '400x600' }}" alt="" class="mobile-image">
              </a>
            {% else %}
              <img src="{{ block.settings.image_mobile | img_url: '400x600' }}" alt="" class="mobile-image">
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <!-- Agregar aquí paginación, navegación, etc., si se necesita -->
  </section>

<script>
$(document).ready(function(){
  // Inicializar Swiper para escritorio
  var swiperDesktop = new Swiper('.diapositiva-nueva-desktop', {
    // Opciones de Swiper para escritorio
    loop: true,
    autoplay: {
      delay: 2500,
      disableOnInteraction: false,
    },
    // Otras opciones como pagination, navigation, etc.
  });

  // Inicializar Swiper para móvil
  var swiperMobile = new Swiper('.diapositiva-nueva-mobil', {
    // Opciones de Swiper para móvil
    loop: true,
    autoplay: {
      delay: 2500,
      disableOnInteraction: false,
    },
    // Otras opciones como pagination, navigation, etc.
  });
});

  
</script>

